{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 550,
  "title": "Cost of living Index of Cities across the world 2023",
  "params": [
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 2009,
        "max": 2023,
        "step": 1,
        "name": "Year:  "
      }
    },
    {
      "name": "zoom_level",
      "value": 30000,
      "bind": {
        "input": "range",
        "min": 3500,
        "max": 60000,
        "step": 100,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [145, -37.95],
      "bind": {
        "input": "select",
        "options": [
          [145, -37.95],
          [144.3, -38.1],
          [144.9, -36.7],
          [147.1, -38.1]
        ],
        "labels": ["Melbourne CBD", "Geelong", "Bendigo", "Sale"],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/myan0051/FIT3179_Assignment_2/main/data/ne_50m_smaller.topojson",
        "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/myan0051/FIT3179_Assignment_2/main/data/ne_50m_smaller.topojson",
        "format": {"type": "topojson", "feature": "ne_50m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "grey"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/myan0051/FIT3179_Assignment_2/main/data/ne_50m_smaller.topojson",
        "format": {"type": "topojson", "feature": "ne_50m_ocean"}
      },
      "mark": {"type": "geoshape", "fill": "lightskyblue", "opacity": 0.5}
    },

    {
      "data": {
          "url": "https://raw.githubusercontent.com/myan0051/FIT3179_Assignment_2/main/data/Cost_of_living_index_v2.csv"
        },
      "transform": [
          {
            "lookup": "City_country",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/myan0051/FIT3179_Assignment_2/main/data/worldcities.csv"
              },
              "key": "city_country_topo",
              "fields": ["lat","lng"]
            }
          },
          {"filter": "datum.Year == Year_selection"}
        ],
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "lng", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "Cost_of_Living_Index",
          "type": "quantitative",
          "scale": {"domain": [23, 105]}
        },
        "color": {
          "field": "Cost_of_Living_Index",
          "type": "quantitative",
          "title": "Cost of Living Index",
          "scale": {"scheme": "plasma","domain": [23, 105]}
        }
      }
    }
  ]
}