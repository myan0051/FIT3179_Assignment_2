{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Cost of living Index of Cities across the world 2023",
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "data/ne_50m_smaller.topojson",
          "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
            "url": "data/Cost_of_living_index.csv"
          },
        "transform": [
            {
              "lookup": "City_country",
              "from": {
                "data": {
                  "url": "data/worldcities.csv"
                },
                "key": "city_country_topo",
                "fields": ["lat","lng"]
              }
            }
          ],
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "lng", "type": "quantitative"},
          "latitude": {"field": "lat", "type": "quantitative"},
          "size": {
            "field": "Cost_of_Living_Index",
            "type": "quantitative",
            "scale": {"domain": [23, 105]}
          },
          "color": {
            "field": "Cost_of_Living_Index",
            "type": "quantitative",
            "title": "Cost of Living Index",
            "scale": {"scheme": "plasma","domain": [23, 105]}
          }
        }
      }
    ]
  }