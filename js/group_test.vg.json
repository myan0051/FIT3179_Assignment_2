{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "padding": 5,
  "width": 1400,
  "height": 1200,
  "data": [
    {
      "name": "click_store",
      "values": [
        {
          "unit": "concat_1",
          "fields": [{"type": "E", "field": "Rank"}],
          "values": ["55"]
        }
      ]
    },
    {
      "name": "arcc",
      "url": "https://raw.githubusercontent.com/myan0051/FIT3179_Assignment_2/main/data/bubble_long_v2.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "filter",
          "expr": "!length(data(\"click_store\")) || vlSelectionTest(\"click_store\", datum)"
        },
        {
          "type": "stack",
          "groupby": [],
          "field": "Value",
          "sort": {"field": ["Attribute"], "order": ["ascending"]},
          "as": ["Value_start", "Value_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Value\"]) && isFinite(+datum[\"Value\"])"
        }
      ]
    },
    {
      "name": "scatter",
      "url": "https://raw.githubusercontent.com/myan0051/FIT3179_Assignment_2/main/data/Cost_of_living_index_v2.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {"type": "filter", "expr": "datum.Year == 2023"},
        {"type": "filter", "expr": "datum.Rank < 536"},
        {
          "type": "filter",
          "expr": "isValid(datum[\"Rank\"]) && isFinite(+datum[\"Rank\"]) && isValid(datum[\"Cost_of_Living_Index\"]) && isFinite(+datum[\"Cost_of_Living_Index\"])"
        }
      ]
    }
  ],
  "signals": [
    {"name": "cx", "update": "800"},
    {"name": "cy", "value": "450"},
    {
      "name": "gravityX",
      "value": 0.36,
      "bind": {"input": "range", "min": 0, "max": 1}
    },
    {
      "name": "gravityY",
      "value": 0.59,
      "bind": {"input": "range", "min": 0, "max": 1}
    },
    {"name": "concat_0_height", "value": 560},
    {"name": "concat_1_height", "value": 150},
    {
      "name": "unit",
      "value": {},
      "on": [
        {"events": "mousemove", "update": "isTuple(group()) ? group() : unit"}
      ]
    },
    {
      "name": "click",
      "update": "vlSelectionResolve(\"click_store\", \"union\", true, true)"
    }
  ],
  "layout": {"padding": 20, "columns": 1, "bounds": "full", "align": "each"},
  "marks": [
    {
      "type": "group",
      "name": "concat_0_group",
      "style": "view",
      "encode": {
        "update": {
          "width": {"signal": "width"},
          "height": {"signal": "concat_0_height"}
        }
      },
      "scales": [
    {
      "name": "size",
      "domain": {"data": "arcc", "field": "Value"},
      "range": [-20, 400]
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "arcc", "field": "Attribute"},
      "range": {"scheme": "blues"}
    }
  ],
    "marks": [
      {
        "name": "concat_0_marks",
        "type": "symbol",
        "style": ["arc"],
        "interactive": true,
        "from": {"data": "arcc"},

      "encode": {
      "enter": {

        "fill": {"scale": "color", "field": "Attribute"},
        "xfocus": {"signal": "cx"},
        "yfocus": {"signal": "cy"}
      },
      "update": {
        "size": {"signal": "pow(2 * datum.Value, 2)", "scale": "size"},
        "stroke": {"value": "white"},
        "strokeWidth": {"value": 1},
        "tooltip": {"signal": "{title: datum.Attribute, 'Price ($USD)': datum.Value}"}
      }
      },
      "transform": [
        {
          "type": "force",
          "iterations": 100,
          "static": false,
          "forces": [
            {
              "force": "collide",
              "iterations": 5,
              "radius": {"expr": "sqrt(datum.size) / 2"}
            },
            {"force": "center", "x": {"signal": "cx"}, "y": {"signal": "cy"}},
            {"force": "x", "x": "xfocus", "strength": {"signal": "gravityX"}},
            {"force": "y", "y": "yfocus", "strength": {"signal": "gravityY"}}]}]
        },
        {
          "type": "text",
          "interactive": false,
          "from": {"data": "concat_0_marks"},
          "encode": {
            "enter": {
              "align": {"value": "center"},
              "baseline": {"value": "middle"},
              "fontSize": {"value": 15},
              "fontWeight": {"value": "bold"},
              "fill": {"value": "white"},
              "text": {"field": "datum.Attribute"}
            },
            "update": {"x": {"field": "x"}, "y": {"field": "y"}}
          }
        },
        {
          "type": "text",
          "interactive": false,
          "from": {"data": "concat_0_marks"},
          "encode": {
            "enter": {
              "align": {"value": "center"},
              "dx": {"value": 700},
              "baseline": {"value": "bottom"},
              "fontSize": {"value": 50},
              "fill": {"value": "white"},
              "text": {"field": "datum.City_country"}
            }
          }
        }
      ]
    },
    {
      "type": "group",
      "name": "concat_1_group",
      "style": "cell",
      "encode": {
        "update": {
          "width": {"signal": "width"},
          "height": {"signal": "concat_1_height"}
        }
      },
      "scales": [    {
        "name": "size1",
        "domain": {"data": "scatter", "field": "Cost_of_Living_Index"},
        "range": [0, 1000]
      }],
      "signals": [
        {
          "name": "click_tuple",
          "on": [
            {
              "events": [{"source": "scope", "type": "click"}],
              "update": "datum && item().mark.marktype !== 'group' && indexof(item().mark.role, 'legend') < 0 ? {unit: \"concat_1\", fields: click_tuple_fields, values: [(item().isVoronoi ? datum.datum : datum)[\"Rank\"]]} : 1",
              "force": false
            },
            {
              "events": [{"source": "view", "type": "dblclick"}],
              "update": "1"
            }
          ]
        },
        {
          "name": "click_tuple_fields",
          "value": [{"type": "E", "field": "Rank"}]
        },
        {
          "name": "click_toggle",
          "value": false,
          "on": [
            {
              "events": [{"source": "scope", "type": "click"}],
              "update": "event.shiftKey"
            },
            {
              "events": [{"source": "view", "type": "dblclick"}],
              "update": "false"
            }
          ]
        },
        {
          "name": "click_modify",
          "on": [
            {
              "events": {"signal": "click_tuple"},
              "update": "modify(\"click_store\", click_toggle ? null : click_tuple, click_toggle ? null : true, click_toggle ? click_tuple : null)"
            }
          ]
        }
      ],
      "marks": [
        {
          "name": "concat_1_marks",
          "type": "symbol",
          "style": ["circle"],
          "interactable" : "false",
          "from": {"data": "scatter"},
          "encode": {
            "update": {
              "opacity": {"value": 0.7},
              "tooltip": {"signal": "{title: datum.City_old, 'Cost of Living Index': datum.Cost_of_Living_Index,'Rank' : datum.Rank}"},
              "fill": {
                "scale": "concat_1_color",
                "field": "Cost_of_Living_Index"
              },
              "ariaRoleDescription": {"value": "circle"},
              "description": {
                "signal": "\"Rank: \" + (format(datum[\"Rank\"], \"\")) + \"; Cost_of_Living_Index: \" + (format(datum[\"Cost_of_Living_Index\"], \"\")) + \"; Cost of Living Index: \" + (format(datum[\"Cost_of_Living_Index\"], \"\"))"
              },
              "x": {"scale": "concat_1_x", "field": "Rank"},
              "y": {"scale": "concat_1_y", "field": "Cost_of_Living_Index"},
              "size": {"scale": "size1", "field": "Cost_of_Living_Index"},
              "shape": {"value": "circle"}
            },
            "hover": {"fill": {"value": "red"},
            "size":  {"value": 1500}}
          }
        }
      ],
      "axes": [
        {
          "scale": "concat_1_x",
          "orient": "bottom",
          "gridScale": "concat_1_y",
          "grid": true,
          "tickCount": {"signal": "ceil(width/40)"},
          "domain": false,
          "labels": false,
          "aria": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        },
        {
          "scale": "concat_1_x",
          "orient": "bottom",
          "grid": false,
          "title": "Rank",
          "labelFlush": true,
          "labelOverlap": true,
          "tickCount": {"signal": "ceil(width/40)"},
          "zindex": 0
        },
        {
          "scale": "concat_1_y",
          "orient": "left",
          "grid": false,
          "title": "Cost_of_Living_Index",
          "tickCount": 3,
          "labelOverlap": true,
          "zindex": 0
        }
      ],
      "legends": [
        {
          "title": "Cost of Living Index",
          "fill": "concat_1_color",
          "gradientLength": {"signal": "clamp(concat_1_height, 64, 200)"},
          "encode": {"gradient": {"update": {"opacity": {"value": 0.7}}}}
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "size",
      "type": "linear",
      "domain": [23, 105],
      "range": [9, 361],
      "zero": false
    },
    {
      "name": "concat_0_theta",
      "type": "linear",
      "domain": {"data": "arcc", "fields": ["Value_start", "Value_end"]},
      "range": [0, 6.283185307179586],
      "zero": true
    },
    {
      "name": "concat_0_color",
      "type": "ordinal",
      "domain": {"data": "arcc", "field": "Attribute", "sort": true},
      "range": "category"
    },
    {
      "name": "concat_1_x",
      "type": "linear",
      "domain": {"data": "scatter", "field": "Rank"},
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "concat_1_y",
      "type": "linear",
      "domain": {"data": "scatter", "field": "Cost_of_Living_Index"},
      "range": [{"signal": "concat_1_height"}, 0],
      "nice": true,
      "zero": true
    },
    {
      "name": "concat_1_color",
      "type": "linear",
      "domain": [20, 140],
      "range": {"scheme": "plasma"},
      "interpolate": "hcl",
      "zero": false
    }
  ]
}