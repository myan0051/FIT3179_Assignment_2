{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 450,
  "height": 450,
  "title" : "Spending Category",
  "data": {"url": "https://raw.githubusercontent.com/myan0051/FIT3179_Assignment_2/main/data/spending_breakdown.csv"},

  "mark": {
    "type": "circle",
    "filled": true,
    "tooltip": true,
    "stroke": "black",
    "strokeWidth": 0.7
  },
  "encoding": {
    "x": {"field": "col", "type": "ordinal", "axis": null},
    "y": {"field": "row", "type": "ordinal", "axis": null, "sort": "-y"},
    "color": {
      "field": "Spending Category",
      "type": "nominal",
      "scale": {"scheme": "set1"},
      "legend": {
        "orient": "right",
        "offset": 10,
        "labelOffset": 3,
        "titlePadding": 5,
        "titleFontSize": 0
      }
    },
    "size": {"value": 1200},
    "tooltip": [{"field": "Spending Category", "type": "nominal" },
    {"field": "row", "type": "quantitative" },
    {"field": "col", "type": "quantitative" }]
  },
  
  
  "config": {}
}