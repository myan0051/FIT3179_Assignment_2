{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Earthquakes of magnitude 4 or large between 4 Oct 2020 and 10 Oct 2020",
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "data/ne_50m.topojson",
          "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
            "url": "data/ne_50m.topojson",
            "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
          },
        "transform": [
            {
              "lookup": "City",
              "from": {
                "data": {
                  "url": "data/ne_50m_populated_places.csv"
                },
                "key": "NAME",
                "fields": ["City","Cost_of_Living_Index"]
              }
            }
          ],
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "LONGITUDE", "type": "quantitative"},
          "latitude": {"field": "LATITUDE", "type": "quantitative"},
          "size": {
            "field": "Cost_of_Living_Index",
            "type": "quantitative",
            "title": "Magnitude (Richter scale)",
            "scale": {"domain": [0, 150]}
          },
          "color": {
            "field": "Cost_of_Living_Index",
            "type": "quantitative",
            "title": "Depth in km",
            "scale": {"scheme": "reds"}
          }
        }
      }
    ]
  }